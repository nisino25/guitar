<!DOCTYPE html>

<html>
  <head>
    <title>Nfret25</title>
    <%= favicon_link_tag asset_path('logo.ico') %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if current_user %>
      <p>
        &nbsp<%= link_to 'マイリスト', mylist_artist_path, class:" badge badge-warning text-white" %>
        &nbsp<%= link_to '他のユーザー', friend_path, class:" badge badge-info text-white" %>
        &nbsp<%= link_to '検索', search_path, class:" badge badge-success text-white" %>
        &nbsp <b class="badge badge-secondary text-white" ><%= current_user.email %></b>
        <br>
        &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&nbsp;
        <%= link_to("ログアウト", destroy_user_session_path, class: "badge badge-danger text-white", method: :delete,)%>
      </p>
    <% end %>
    <div class="container">
    <%= render 'layouts/messages' %>
      <%= yield %>
      </div>
  </body>
</html>
